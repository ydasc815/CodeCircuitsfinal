<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="8dp"
        app:cardMaxElevation="8dp"
        android:paddingVertical="5dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:layout_marginTop="180dp"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            android:layout_marginRight="110dp"
            android:src="@drawable/lcurl"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:layout_marginTop="180dp"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="110dp"
            android:src="@drawable/rcurl"/>

        <TextView
            android:id="@+id/contestName"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:fontFamily="@font/galindo"
            android:text="Contest Name will be displayed here"
            android:textAllCaps="true"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/platform_logo"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/endTime"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:fontFamily="serif"
            android:textStyle="italic"
            android:text="Contest will be over by : "
            android:textSize="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="130dp"
            android:text="Contest Organised by : "
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/platform"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="PLATFORM"
            android:layout_marginTop="150dp"
            android:textSize="20dp"
            android:textAlignment="center" />

        <android.support.v7.widget.CardView
            android:id="@+id/visit_page"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="185dp"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            app:cardCornerRadius="8dp"
            app:cardMaxElevation="10dp"
            app:cardBackgroundColor="#859AFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="Visit Contest Page"
                android:textSize="20dp"
                android:layout_marginTop="6dp"
                android:textColor="@android:color/black"
                style="bold"/>

        </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>

</RelativeLayout>